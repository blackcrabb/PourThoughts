<h5 style="font-weight: bold;">Dashboard</h5>
<h3>Welcome {{name}}</h3>
<p align="center" style="font-size: 1.3rem;font-family: 'Yellowtail', cursive;"> Here are your Stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th style="font-size: 2rem;">Title</th>
                <th style="font-size: 2rem;">Date</th>
                <th style="font-size: 2rem;">Status</th>
                <th></th>
            </tr>
            <tbody>
                {{#each stories}}
                    <tr>
                        <td><a href="/stories/{{_id}}" style="font-weight:bold">{{title}}</a></td>
                        <td style="font-weight:bold">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                        <td style="font-weight:bold" ><span class="dash-status">{{status}}</span></td>
                        <td>
                            <a href="/stories/edit/{{_id}}" class="btn btn-float">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form action="/stories/{{_id}}" method="POST" id="delete-form">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn red">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </thead>
    </table>
{{else}}
    <p> you have not created any stories</p>
{{/if}}