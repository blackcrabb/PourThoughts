<h1 style="font-family: 'Yellowtail', cursive;">Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card" style="font-family: 'Yellowtail', cursive;">
                <div class="card-image">
                   {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}" style="font-weight: bold;">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" style="color: white;font-weight:bold" class="btn black">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories to display</p>
    {{/each}}
</div>